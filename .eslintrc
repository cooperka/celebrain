{
  "extends": "cooperka/react",

  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "jest": true
  },

  "globals": {
    "__DEV__": true
  },

  "rules": {
    // Recognize the valid 'to' attribute for react-router.
    "jsx-a11y/anchor-is-valid": ["error", {
      "components": ["Link"],
      "specialLink": ["to"]
    }]
  }
}
